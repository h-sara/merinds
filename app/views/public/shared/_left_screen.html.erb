<div class="container" style="width:90%">
  <div class="row border p-2 mt-2 h-50" >
    <div class="col">
      <div class="row">
        <div class="col">
          <%= image_tag member.get_member_image(100,100), class: "rounded-circle" %>
        </div>
        <div class="col my-auto">
          <ul class="list-unstyled my-auto">
            <li class="mb-2"><%= member.nickname %></li>
            <li>
              投稿数：
              <%= link_to my_posts_path do %>
                <%= member.posts.count %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <ul class="list-unstyled">
            <li>
              フォロー：
              <%= link_to members_followings_path do%>
                <%= member.followings.count %>
              <% end %>
            </li>
            <li>
              フォロワー：
              <%= link_to members_followers_path do%>
                <%= member.followers.count %>
              <% end %>
            </li>
            <li>
              いいねした投稿：
              <%= link_to my_favorited_posts_path do %>
                <%= favorite_posts.count %>
              <% end %>
            </li>
            <li>グループ：</li>
          </ul>
          <div class="text-center mt-3">
            <%= link_to "マイページへ", my_page_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row border p-2 mt-2" >
    <div class="col">
      <h4 class="mt-3 mb-4 text-center">投稿フォーム</h4>
      <%= render "public/shared/error", contents: post %>
      <%= form_with model: post do |f| %>
        <label>文章</label><br>
        <%= f.text_area :sentence, placeholder: "文章をここに入力してください", style: "width:100%; height:100px" %><br>
        <label>画像</label><br>
        <%= f.file_field :image_id, accept: "image/*" %>
        <div class="text-center my-2">
          <%= f.submit '投稿', class: "btn btn-info mt-3", style: "width:100px" %>
        </div>
      <% end %>
    </div>
  </div>
</div>