<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <%= render "public/shared/left_screen", member: @member_for_left, post: @post, favorite_posts: @favorite_posts %>
    </div>
    <div class="col-9">
      <div class="row mt-2 mr-2">
        <div class="col">
          <div class="row">
            <h3 style="background-color: rgba(169, 169, 169, 0.5)">
              <%= @member.nickname %>さんの投稿一覧
            </h3>
          </div>
          <% @posts.each do |post| %>
          <div class="row mb-2">
            <div class="col">
              <div class="row p-2 border">
                <div class="col">
                  <div class="row d-flex align-items-center">
                    <span class="mr-3">
                      <%= image_tag post.member.get_member_image(50,50), class: "rounded-circle" %>
                    </span>
                    <span class="mr-3">
                      <%= post.member.nickname %>
                    </span>
                    <span class="mr-3">
                      <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </span>
                    <span class="mr-3">
                      <% if post.is_edited == true %>
                        （編集済み）
                      <% end %>
                    </span>
                  </div>
                  <%= link_to my_post_path(post.id) do %>
                    <div class="row ml-5">
                      <div class="col">
                        <div class="row text-dark">
                          <%= safe_join(post.sentence.split("\n"),tag(:br)) %>
                        </div>
                        <div class="row">
                          <!--投稿に画像がある場合は表示させる-->
                          <% if post.image_id.attached? %>
                            <%= image_tag post.image_id, class: "img-fluid" %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="row mt-2">
                    <div class="col-2 offset-1">
                      <!--コメントのアイコン・コメント数-->
                      <%= link_to my_post_path(post) do %>
                        <span class="text-muted">
                          <i class="far fa-comment-alt"></i>
                          <%= post.post_comments.count %>
                        </span>
                      <% end %>
                    </div>
                    <div class="col-2">
                      <!--いいねのアイコン・いいね数-->
                      <% if post.favorited_by?(current_member) %>
                      <!--現ユーザーが投稿のfavoritesテーブル内に存在する(いいね済)場合-->
                        <%= link_to favorites_create_path(post), method: :delete do %>
                          <span class="text-danger">
                            <i class="fas fa-heart"></i>
                            <%= post.favorites.count %>
                          </span>
                        <% end %>
                      <% else %>
                        <%= link_to favorites_create_path(post), method: :post do %>
                          <span class="text-dark">
                            <i class="far fa-heart"></i>
                            <%= post.favorites.count %>
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="mx-auto"><%= paginate @posts %></div>
      </div>
    </div>
  </div>
</div>