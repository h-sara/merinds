<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <%= render "public/shared/left_screen", member: @member, post: @post, favorite_posts: @favorite_posts %>
    </div>
    <div class="col-8">
      <div class="row mt-2 mr-2">
        <div class="col">
          <h3>投稿一覧</h3>
          <%= render "public/posts/index", posts: @posts %>
        </div>
      </div>
      <div class="row">
        <div class="mx-auto"><%= paginate @posts %></div>
      </div>
    </div>
  </div>
</div>