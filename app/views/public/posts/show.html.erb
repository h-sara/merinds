<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <%= render "public/shared/left_screen", member: @member, post: @post, favorite_posts: @favorite_posts, favorite_posts: @favorite_posts %>
    </div>
    <div class="col-8">
      <div class="row mt-2 mr-2">
        <div class="col">
          <h4 class="mb-2">投稿詳細</h4>
          <div class="row border p-2">
            <div class="col">
              <div class="row">
                <div class="col-1 mr-3">
                  <div class="row">
                    <%= image_tag @member.get_member_image(50,50), class: "rounded-circle" %>
                  </div>
                </div>
                <div class="col-10">
                  <div class="row d-flex align-items-top">
                    <b class="mr-4"><%= @post_show.member.nickname %></b>
                    <span><%= @post_show.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                    <span>
                      <% if @post_show.is_edited == true %>
                        （編集済み）
                      <% end %>
                    </span>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="row text-dark">
                        <%= safe_join(@post_show.sentence.split("\n"),tag(:br)) %>
                      </div>
                      <div class="row">
                        <!--投稿に画像がある場合は表示させる-->
                        <% if @post_show.image_id.attached? %>
                          <%= image_tag @post_show.image_id, class: "img-fluid" %>
                        <% end %>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              <div class="row mt-2">
                <div class="col-2 offset-1">
                  <!--コメントのアイコン・コメント数-->
                  <span class="text-muted">
                    <i class="far fa-comment-alt"></i>
                    <%= @post_show.post_comments.count %>
                  </span>
                </div>
                <div class="col-2">
                  <!--いいねのアイコン・いいね数-->
                  <% if @post_show.favorited_by?(current_member) %>
                  <!--現ユーザーが投稿のfavoritesテーブル内に存在する(いいね済)場合-->
                    <%= link_to favorites_create_path(@post_show), method: :delete do %>
                      <span class="text-danger">
                        <i class="fas fa-heart"></i>
                        <%= @post_show.favorites.count %>
                      </span>
                    <% end %>
                  <% else %>
                    <%= link_to favorites_create_path(@post_show), method: :post do %>
                      <span class="text-dark">
                        <i class="far fa-heart"></i>
                        <%= @post_show.favorites.count %>
                      </span>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div class="row ml-2">
                <div class="col p-2">
                  <div class="row">
                    <div class="col">
                      <h4 class="mt-3">コメント</h4>
                      <% @post_show.post_comments.each do |post_comment| %>
                        <div class="row border ml-3 mr-1 p-3 mb-2">
                          <div class="col">
                            <div class="row">
                              <div class="col-1 mr-3">
                                <div class="row">
                                  <% if current_member.id == post_comment.member_id %>
                                  <!--現メンバーがコメント作成者の場合-->
                                    <!--投稿者のアイコン-->
                                    <%= image_tag post_comment.member.get_member_image(50,50), class: "rounded-circle" %>
                                  <% else %>
                                  <!--現メンバーがコメント作成者でない場合-->
                                    <%= link_to your_page_path(post_comment.member.nickname) do%>
                                      <%= image_tag post_comment.member.get_member_image(50,50), class: "rounded-circle" %>
                                    <% end %>
                                  <% end %>
                                </div>
                              </div>
                              <div class="col-10">
                                <div class="row d-flex align-items-center">
                                  <b class="mr-4">
                                    <% if current_member.id == post_comment.member_id %>
                                  <!--現メンバーがコメント作成者の場合-->
                                      <!--投稿者のニックネーム-->
                                      <%= post_comment.member.nickname %>
                                    <% else %>
                                    <!--現メンバーがコメント作成者でない場合-->
                                      <%= link_to your_page_path(post_comment.member.nickname) do%>
                                        <span class="text-dark"><%= post_comment.member.nickname %></span>
                                      <% end %>
                                    <% end %>
                                  </b>
                                  <span class="mr-4"><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                                  <span>
                                    <!--現メンバーがコメント作成者であれば削除できるようにする-->
                                    <% if current_member.id == post_comment.member_id %>
                                      <!--コメント削除ボタン-->
                                      <%= link_to post_comments_destroy_path(post_comment.post_id, post_comment.id), method: :delete, data: {confirm: "コメント削除してもよろしいですか？"}, class: "btn btn-danger" do %>
                                        <i class="fas fa-trash-alt"></i>
                                      <% end %>
                                    <% end %>
                                  </span>
                                </div>
                                <div class="row mt-2">
                                  <%= safe_join(post_comment.comment.split("\n"),tag(:br)) %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div class="row  ml-3 py-3">
                    <div class="col">
                      <h4 class="mb-3">コメントを書く</h4>
                      <%= form_with model: [@post_comment], url: post_comments_create_path(@post_show) do |f| %>
                        <%= f.text_area :comment, style: "width:100%; height:150px", placeholder: "コメントをここに入力してください" %><br>
                        <div class="text-right mt-2">
                          <%= f.submit '投稿', class: "btn btn-info", style: "width:100px" %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>