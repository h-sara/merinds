<div class="container" style="width:80%">
  <div class="row">
    <b class="text-danger">
      <% if notice != nil%>
        <i class="fas fa-exclamation-triangle"></i> <%= notice %>
      <% end %>
    </b>
  </div>
  <div class="row">
    <h4 class="mt-2 mb-4 px-1" style="background-color: rgba(169, 169, 169, 0.5)">新規登録</h4>
    <div class="col align-self-center text-danger">※全て必須項目です。</div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error", contents: resource %>
  <div class="form-group row">
    <div class="col-3">名前</div>
    <div class="col-4">
      <div class="row">
        <div class="col-3">(姓)</div>
        <div class="col-9"><%= f.text_field :first_name, placeholder: "令和" %></div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <div class="col-3">(名)</div>
        <div class="col-9"><%= f.text_field :last_name, placeholder: "花子" %></div>
      </div>
    </div>
    <div class="col-1">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">フリガナ</div>
    <div class="col-4">
      <div class="row">
        <div class="col-3">(セイ)</div>
        <div class="col-9"><%= f.text_field :first_name_kana, placeholder: "レイワ" %></div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <div class="col-3">(メイ)</div>
        <div class="col-9"><%= f.text_field :last_name_kana, placeholder: "ハナコ" %></div>
      </div>
    </div>
    <div class="col-1">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">メールアドレス</div>
    <div class="col-4">
      <div class="row">
        <div class="offset-3 col-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@merinds.com" %></div>
      </div>
    </div>
    <div class="col-5"></div>
  </div>

  <div class="form-group row">
    <div class="col-3">ニックネーム</div>
    <div class="col-4">
      <div class="row">
        <div class="offset-3 col-9"><%= f.text_field :nickname, placeholder: "メリリン" %></div>
      </div>
    </div>
    <div class="col-5"></div>
  </div>

  <div class="form-group row">
    <div class="col-3">パスワード(6文字以上)</div>
    <div class="col-4">
      <div class="row">
        <div class="offset-3 col-9">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
    </div>
    <div class="col-5"></div>
  </div>

  <div class="form-group row">
    <div class="col-3">パスワード(確認用)</div>
    <div class="col-4">
      <div class="row">
        <div class="offset-3 col-9"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
    </div>
    <div class="col-5"></div>
  </div>
  <div class="actions text-center my-2">
    <%= f.submit "新規登録", class: "btn btn-primary mt-2", style: "width:100px" %>
  </div>
  <% end %>
  <div class="row">
    <div class="mt-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>