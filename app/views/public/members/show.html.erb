<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <%= render "public/shared/left_screen", member: @member_for_left, post: @post, favorite_posts: @favorite_posts, member_posts: @member_posts %>
    </div>
    <div class="col-9">
      <div class="row" style="width:90%">
        <div class="col">
          <div class="row">
            <h3 class="mt-2" style="background-color: rgba(169, 169, 169, 0.5)">マイページ</h3>
          </div>
          <div class="row">
            <table class="table table-bordered">
              <tr>
                <th class="align-middle" style="width: 25%">アイコン</th>
                <td style="width: 75%"><%= image_tag @member.get_member_image(100,100), class: "rounded-circle" %></td>
              </tr>
              <tr>
                <th class="align-middle">名前</th>
                <td><%= @member.first_name %>　<%= @member.last_name %></td>
              </tr>
              <tr>
                <th class="align-middle">フリガナ</th>
                <td><%= @member.first_name_kana %>　<%= @member.last_name_kana %></td>
              </tr>
              <tr>
                <th class="align-middle">メールアドレス</th>
                <td><%= @member.email %></td>
              </tr>
              <tr>
                <th class="align-middle">ニックネーム</th>
                <td><%= @member.nickname %></td>
              </tr>
              <tr>
                <th class="align-middle">自己紹介文</th>
                <td>
                  <!--自己紹介文がnilでない場合、改行をして表示させる-->
                  <% if @member.introduction != nil%>
                    <%= safe_join(@member.introduction.split("\n"),tag(:br)) %>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
          <div class="row">
            <div class="mx-auto mt-3">
              <%= link_to "メンバー情報編集", members_edit_path, class: "btn btn-lg btn-success" %>
            </div>
          </div>
          <div class="row mt-5">
            <h4>
              退会希望の方は
              <u><%= link_to "こちら", members_check_path, class: "text-primary" %></u>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>