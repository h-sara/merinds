<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <%= render "public/shared/left_screen", member: @member, post: @post, favorite_posts: @favorite_posts %>
    </div>
    <div class="col-8">
      <div class="row mt-2 mr-2">
        <div class="col">
          <div class="row border">
            <div class="col">
              <div class="row px-4 pt-4 mt-2">
                <div class="col-3"><%= image_tag @show_your.get_member_image(100,100) %></div>
                <div class="col-9">
                  <div class="row lead mb-3">
                    <div class="col"><%= @show_your.nickname %></div>
                    <div class="col">
                      フォロー中
                    </div>
                    <div class="col"></div>
                  </div>
                  <div class="row">
                    <div class="col">
                      フォロー：
                    </div>
                    <div class="col">
                      フォロワー：
                    </div>
                    <div class="col">
                      投稿数：
                      <%= link_to your_posts_path do %>
                        <%= @show_your.posts.count %>
                      <% end %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">グループ：未所属</div>
                  </div>
                </div>
              </div>
              <div class="row p-4">
                <p class="lead">自己紹介</p><br>
                <%= @show_your.introduction %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-2 mr-2">
        <div class="col">
          <div class="row border">
            <div class="col mt-2">
              <h4>投稿一覧</h4>
              <div class="row px-4 pb-2">
                <div class="col">
                  <% @show_your.posts.each do |post| %>
                    <div class="row border mb-2">
                      <div class="col">
                        <div class="row p-2">
                          <span class="mr-4">
                            <% if post.favorited_by?(current_member) %>
                            <!--現ユーザーが投稿のfavoritesテーブル内に存在する(いいね済)場合-->
                              <%= link_to favorites_create_path(post), method: :delete do %>
                                <i class="fas fa-heart"></i>
                                <%= post.favorites.count %>
                              <% end %>
                            <% else %>
                              <%= link_to favorites_create_path(post), method: :post do %>
                                <i class="far fa-heart"></i>
                                <%= post.favorites.count %>
                              <% end %>
                            <% end %>
                          </span>
                          <span class="mr-4">
                            <%= link_to my_post_path(post) do %>
                              <i class="fas fa-comment-alt"></i>
                              <%= post.post_comments.count %>
                            <% end %>
                          </span>
                          <span>作成日時：<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                        </div>
                        <div class="row">
                          <%= safe_join(post.sentence.split("\n"),tag(:br)) %>
                        </div>
                        <div class="row">
                          <!--投稿に画像がある場合は表示させる-->
                          <% if post.image_id.attached? %>
                            <%= image_tag post.image_id, class: "img-fluid" %>
                          <% end %>
                        </div>
                        <div class="row justify-content-end">
                          <% if post.is_edited == true %>
                          <span class="mr-2"><%= post.updated_at.strftime('%Y/%m/%d %H:%M') %></span>
                            <span class="text-right">(編集済み)</span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>