<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <%= render "public/shared/left_screen", member: @member_for_left, post: @post, favorite_posts: @favorite_posts, member_posts: @member_posts %>
    </div>
    <div class="col-9">
      <div class="row mt-2 mr-2">
        <div class="col">
          <div class="row">
            <h3 style="background-color: rgba(169, 169, 169, 0.5)">メンバー一覧</h3>
          </div>
          <div class="row">
            <%= render "public/members/index", members: @members %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="mx-auto"><%= paginate @members %></div>
      </div>
    </div>
  </div>
</div>