<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <%= render "public/shared/left_screen", member: @member, posts: @posts, post: @post %>
    </div>
    <div class="col-8">
      <div class="row" style="width:90%">
        <h4 class="mt-2 mb-4">会員一覧</h4>
        <table class="table">
          <thead class="text-center">
            <th>アイコン</th>
            <th>ニックネーム</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th>グループ</th>
            <th>投稿数</th>
          </thead>
          <tbody class="text-center">
            <% @members.each do |member| %>
            <tr>
              <td class="align-middle">
                <%= link_to your_page_path(member.nickname) do %>
                  <%= image_tag member.get_member_image(50,50) %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= member.nickname %>
              </td>
              <td class="align-middle"></td>
              <td class="align-middle"></td>
              <td class="align-middle">未所属</td>
              <td class="align-middle">
                <%= link_to posts_path do %>
                  <%= @posts.count %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>