<div class="row rounded border mt-3">
  <div class="col">
    <div class="row">
      <h5 class="px-4 pt-3">コメント</h5>
    </div>
    <div class="row">
      <div class="col">
        <div id="comments_index">
          <!--コメント一覧-->
          <%= render "public/post_comments/post_comment_index", post: post %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row rounded border mt-3 py-3">
  <div class="col">
    <div class="row border-bottom">
      <h5 class="px-4">コメントの投稿フォーム</h5>
    </div>
    <div class="row pt-3">
      <div class="col">
        <!--コメントの投稿フォーム-->
        <%= render "public/post_comments/post_comment_form", post_comment: post_comment, post: post %>
      </div>
    </div>
  </div>
</div>