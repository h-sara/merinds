<% if current_member.id != post_show.member_id %>
<!--現メンバー情報でない場合-->
  <% if current_member.following?(post_show.member) %>
  <!--現メンバーが選択したメンバーをフォローしている場合-->
    <%= link_to "フォロー中", relationships_destroy_path(post_show.member.id), class: "btn btn-outline-primary", method: :delete %>
  <% else %>
  <!--現メンバーが選択したメンバーをフォローしていなかった場合-->
    <%= link_to "フォロー", relationships_create_path(post_show.member.id), class: "btn btn-primary", method: :post %>
  <% end %>
<% end %>