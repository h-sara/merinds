<div class="container" style="width:60%">
  <div class="row">
    <h4 class="mt-2 mb-4">管理者ログイン</h4>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-1 justify-content-center">
        <p class="text-left" style="width:130px">メールアドレス</p>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:300px" %>
      </div>
    </div>
    <div class="row justify-content-center">
        <p class="text-left" style="width:130px">パスワード</p>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", style: "width:300px" %>
      </div>
    </div>
    <div class="actions text-center my-2">
      <%= f.submit "ログイン", class: "btn btn-primary", style: "width:100px" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>