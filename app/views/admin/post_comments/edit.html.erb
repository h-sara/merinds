<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="row">
        <h4 class="mt-2 mb-4 ml-5" style="background-color: rgba(169, 169, 169, 0.5)">
          コメント情報編集
        </h4>
      </div>
      <div class="row">
        <div class="col offset-1">
          <%= render "public/shared/error", contents: @post_comment %>
        </div>
      </div>
      <%= form_with model: @post_comment, url: admin_post_post_comment_path(@post_comment.id), method: :patch do |f| %>
      <div class="row">
        <div class="col offset-1">
          <div class="row mb-3">
            <div class="col-2">コメントID</div>
            <div class="col-10"><%= @post_comment.id %></div>
          </div>
          <div class="row mb-3">
            <div class="col-2">文章</div>
            <div class="col-10"><%= f.text_area :comment, style: "width:80%; height:100px" %></div>
          </div>
          <div class="row mb-3">
            <div class="col-2">作成者</div>
            <div class="col-10">
              <%= f.select :member_id, @member, :id => 'member_id' %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-2">ステータス</div>
            <div class="col-10">
              <%= f.radio_button :is_hidden, :false %>
              <label class="mr-4">表示</label>
              <%= f.radio_button :is_hidden, :true %>
              <label>非表示</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="mx-auto">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>